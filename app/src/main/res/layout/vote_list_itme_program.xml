<?xml version="1.0" encoding="utf-8"?>
<!--이게 하나의 아이템-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:background="@drawable/border_main"
        >

        <ImageView
            android:id="@+id/votelist_imageview_program"
            android:layout_width="324dp"
            android:layout_height="136dp"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="328dp"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"

            >

            <LinearLayout
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/votelist_textview_programname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textColor="#FF7D8F"
                    android:textSize="19dp"/>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/votelist_textview_voteperioddetail"
                        android:layout_width="35dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="2dp"
                        android:text="투표기간"
                        android:textColor="#C9CACA"
                        android:textSize="9dp"/>
                    <TextView
                        android:id="@+id/votelist_textview_votedday"
                        android:layout_width="150dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="content"
                        android:textColor="#5D5F5E"
                        android:textSize="9dp"/>
                </LinearLayout>




            </LinearLayout>

            <ImageView
                android:id="@+id/votelist_imageview_vote"
                android:layout_width="104dp"
                android:layout_height="40dp"
                android:layout_marginLeft="210dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/main_govote"
                />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>