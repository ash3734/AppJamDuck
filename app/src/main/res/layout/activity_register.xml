<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ash.sopt19th_mate.board.RegisterActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/main_topbar"
        app:titleTextColor="#FFF">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/write_cancel"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="게시판"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/enroll"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/write_submit"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
           />


    </android.support.v7.widget.Toolbar>




    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="520dp"
        android:background="#9d9e9e" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="사진 추가하기"
        android:orientation="horizontal">



        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/write_photo"
            android:id="@+id/select"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 추가하기"
            android:textSize="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/button2"
        android:layout_marginLeft="320dp"
        android:layout_marginBottom="7dp"
        android:id="@+id/layout1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/textView2"
            android:layout_above="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/1000"
            android:id="@+id/textView3"
            android:layout_above="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="내용을 입력해주세요"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/write_plusphoto"
                android:id="@+id/boardPic"/>




        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>