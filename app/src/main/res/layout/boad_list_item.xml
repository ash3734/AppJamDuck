<?xml version="1.0" encoding="utf-8"?><!--이게 하나의 아이템-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/boadlist_imageview_userimg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/boadlist_textview_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="15dp"
                    android:textColor="#5D5F5E"
                    android:text="닉네임" />

                <TextView
                    android:id="@+id/boadlist_textview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="17dp"
                    android:textColor="#C9CACA"
                    android:textSize="11dp"
                    android:text="방금전" />


                <TextView
                    android:id="@+id/boardlist_texview_delete"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="150dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/boadlist_textview_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="가나다라마바사아자차타카파하" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/boadlist_imageview_good"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/good"/>

            <TextView
                android:id="@+id/boadlist_texview_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="0"
                android:textSize="15dp"
                />
            <ImageView
                android:id="@+id/boadlist_imageview_bad"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bad"/>
            <TextView
                android:id="@+id/boadlis_texview_bad_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="0"
                android:textSize="15dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/boadlist_relativelayout_coment"
            android:background="@drawable/coment_background"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="답글"/>
            <TextView
                android:id="@+id/boadlist_textview_coment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="5dp"
                android:text="0"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:background="#C9CACA" />

</LinearLayout>