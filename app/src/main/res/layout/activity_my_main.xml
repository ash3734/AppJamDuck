<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mypage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ash.sopt19th_mate.mypage.MyMainActivity"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mypage_Bar_Id"/>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back"
                android:id="@+id/mymain_BackImage_Id"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마이 페이지"
                android:textColor="#FFF"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="5px">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mymain_myImageView_Id"
                    android:src="@drawable/mypage_gra"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/mypage_imageview_myimg"
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/profile_default"
                        android:layout_centerInParent="true"
                        app:civ_shadow="true"
                        app:civ_shadow_color="#ff7d8f"
                        app:civ_shadow_radius="3"
                        />
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="105dp"
                        android:layout_height="20dp"
                        android:background="@drawable/image_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="닉네임"
                            android:textSize="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/mypage_My_TextView_Id"
                            />
                        <!--<ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/mypage_x"
                            android:id="@+id/mypage_My_EditImageView_Id"
                            />-->

                    </RelativeLayout>
                </LinearLayout>
                <!--<ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/mypage_photo"
                    android:layout_marginTop="66dp"
                    android:layout_marginRight="145dp"
                    android:layout_alignParentRight="true"/>-->
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="24dp"
                    android:text="메인 가수"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="7dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/mymain_main_ImageView"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:layout_marginTop="35dp"
                        android:src="@drawable/mypage_whitebox"
                        app:civ_shadow="true"
                        app:civ_shadow_color="#ff7d8f"
                        app:civ_shadow_radius="3"
                        android:id="@+id/mypage_Main_CImageView_Id"
                        />
                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="트와이스"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#5d5f5d"
                        android:layout_marginTop="13dp"
                        android:layout_below="@id/mypage_Main_CImageView_Id"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/mypage_Main_TextView_Id"/>
                    <LinearLayout
                        android:layout_width="54dp"
                        android:layout_height="18dp"
                        android:layout_below="@id/mypage_Main_TextView_Id"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:id="@+id/mypage_Main_Bul_Id">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#5d5f5d"
                            android:text="게시판"/>
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/mypage_triangle" />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/big_popup_heart"
                    android:layout_marginTop="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="146dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c9c9c8"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="서브 가수"
                android:textStyle="bold"
                android:textSize="15dp"
                android:paddingLeft="18dp"
                android:gravity="center_vertical"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mypage_RecyclerView_Id">

            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:gravity="center_vertical"
                android:id="@+id/mypage_plusSinger_View_Id"
                android:background="#FFF">
                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mypage_plus"/>
                <TextView
                    android:layout_width="225dp"
                    android:layout_height="82dp"
                    android:text="좋아하는 가수를 추가하세요"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
